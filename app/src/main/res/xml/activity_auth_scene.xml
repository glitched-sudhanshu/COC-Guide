<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1028"
        motion:staggered="0.50">
       <KeyFrameSet>

           <KeyAttribute
               motion:motionTarget="@id/imgFireball"
               motion:framePosition="20"
               android:rotation="-50" />
           <KeyAttribute
               motion:motionTarget="@id/imgFireball"
               motion:framePosition="80"
               android:rotation="45" />

           <KeyAttribute
               motion:motionTarget="@id/imgWiz"
               motion:framePosition="10"
               android:rotationY="30" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imgFireball"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            android:layout_height="40dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.175"
            motion:layout_constraintHeight_percent=".27"
            motion:layout_constraintHorizontal_bias="0.119"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imgFireball"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="80dp"
            android:layout_height="55dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.066"
            motion:layout_constraintHeight_percent=".27"
            motion:layout_constraintHorizontal_bias="0.646"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:rotationX="-21"
            android:rotationY="-22"
            android:rotation="-13"
            android:alpha="0" />
    </ConstraintSet>
</MotionScene>